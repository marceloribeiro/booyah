{{model_name}} = {{model_name.camelize()}}.find(self.params['id'])
        if self.is_put_request():
            {{model_name}}.update(self.{{model_name}}_params())
        else:
            {{model_name}}.patch_update(self.{{model_name}}_params())

        return self.respond_to(
            html=lambda: self.redirect(f'/{{model_name.pluralize()}}/{{'{'}}{{model_name}}.id{{'}'}}'),
            json=lambda: self.render({ "{{model_name}}": {{model_name.camelize()}}Serializer({{model_name}}).to_dict() })
        )